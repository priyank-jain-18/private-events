<% if logged_in? %>
	  (Logged in: <%= current_user.name %>)
	 
	<% end %>
	<h1>User Profile</h1>
	
	<% @user.events.each do |event| %>
      <p> Name: <%= event.name %> </p>
	  <p> Description: <%= event.description %> </p>
	<% end %> 

	<h2>Upcoming Events</h2>
	<p><%= @user.name %> is attending:</p>
	
	<% @upcoming_events.each do |event| %>
	  <p> Name: <%= event.name %> </p>
	  <p> Description: <%= event.description %> </p>
	  <p> Date: <%= event.date %> </p>
	
	<% end %>
	
	<h2>Previous Events</h2>
	<p><%= @user.name %> attended:</p>
	
	<% @prev_events.each do |event| %>
	  <p> Name: <%= event.name %> </p>
	  <p> Description: <%= event.description %> </p>
	  <p> Date: <%= event.date %> </p>
		<% end %>